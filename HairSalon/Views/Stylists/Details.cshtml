@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<img src="@Html.DisplayFor(model => model.PhotoUrl)" alt="stylist image url" />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h5>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h5>
<h5>@Html.DisplayNameFor(model => model.Rate): $@Html.DisplayFor(model => model.Rate)</h5>
<hr />

@if (@Model.Clients.Count == 0)
{
  <h3>This stylist currently has no clients...</h3>
}
else
{
  <h3>Clients:</h3>
  @foreach (Client client in Model.Clients)
  {
    <h4>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</h4>
  }
}
<p>@Html.ActionLink("Edit stylist", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Add new client", "Create", "Clients")</p>