@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client
<div class="container">
  <h2>Client Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
  <h5>@Html.DisplayNameFor(model => model.Phone): @Html.DisplayFor(model => model.Phone)</h5>
  <h5>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</h5>
  <h5>@Html.DisplayNameFor(model => model.Notes): @Html.DisplayFor(model => model.Notes)</h5>
  <hr />
  <h6>@Html.DisplayNameFor(model => model.Stylist): @Html.DisplayFor(model => model.Stylist.Name)</h6>
  <hr />
  <p>@Html.ActionLink("Edit client", "Edit", new { id = Model.ClientId })</p>
  <p>@Html.ActionLink("Delete client", "Delete", new { id = Model.ClientId })</p>
</div>