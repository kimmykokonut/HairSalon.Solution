@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="row m-3 ">
  <div class="col-sm-8 mx-auto ">
    <div class="card p-3 list">
      <h1 class="text-center card-title">Current clients</h1>
      <div class="text-center mt-2">
        <form asp-controller="Clients" asp-action="Index">
          <p>
            <input type="text" name="SearchString" placeholder="search by name..." />
            <input type="submit" value="Find" />
          </p>
        </form>
      </div>

      @if (@Model.Count == 0)
      {
        <h3>No clients have been added yet!</h3>
      }
      else
      {
        @foreach (Client client in Model)
        {
          <h5>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</h5>
        }
      }
    </div>
  </div>
</div>
<div class="row">
  <div class="text-center">
    <p>@Html.ActionLink("Add new client", "Create")</p>
  </div>
</div>